<?xml version="1.0" encoding="utf-8"?>
<component name="SettingsScreen" extends="Group">
    <!-- Tela de Configurações: definir endpoint e limpar favoritos -->
    <script type="text/brightscript" uri="pkg:/components/screens/Settings/SettingsScreen.brs" />

    <interface>
        <field id="voltarHome" type="boolean" />
        <field id="endpointAtual" type="string" />
    </interface>

    <children>
        <Rectangle id="Bg" width="1920" height="1080" color="#121316" />

        <Label id="Titulo" translation="[60,60]" text="Configurações" fontSize="36" />
        <Label id="Desc" translation="[60,110]" text="Defina o endpoint da API ou limpe favoritos." fontSize="24" />

        <Label id="EndpointLabel" translation="[60,180]" text="Endpoint atual:" fontSize="24" />
        <Label id="EndpointValor" translation="[60,220]" text="" fontSize="24" />

        <MarkupList id="AcaoList" translation="[60,300]" itemSpacing="16" itemSize="[520,48]" />

        <!-- Input de texto para endpoint -->
        <TextEditBox id="EndpointInput" translation="[60,380]" width="640" height="48" hintText="http(s)://..." visible="false" />
        <Label id="Hint" translation="[60,440]" text="Pressione OK para salvar, Back para cancelar." fontSize="20" visible="false" />
    </children>
</component>
