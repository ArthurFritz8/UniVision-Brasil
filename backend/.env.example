# Servidor
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Banco de Dados MongoDB
MONGODB_URI=mongodb://localhost:27017/univision_brasil
MONGODB_TEST_URI=mongodb://localhost:27017/univision_brasil_test

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=3600

# JWT Autenticação
JWT_SECRET=sua_chave_secreta_super_segura_aqui_troque_em_producao
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=sua_chave_refresh_super_segura_aqui
JWT_REFRESH_EXPIRE=30d

# Stream token (URL temporária para <video> sem expor upstream)
# Se não setar, cai no JWT_SECRET
STREAM_TOKEN_SECRET=sua_chave_stream_super_segura_aqui
STREAM_TOKEN_EXPIRE=10m

# Opcional: amarra o token ao IP do cliente (melhora contra compartilhamento)
STREAM_TOKEN_BIND_IP=false

# Segurança SSRF do /api/stream/fetch
# Se setar, apenas hosts nesta lista (e o host do stream original) serão permitidos.
STREAM_UPSTREAM_HOST_ALLOWLIST=
# Permitir destinos privados (localhost/192.168.x.x etc). Deixe false em produção.
STREAM_ALLOW_PRIVATE_UPSTREAM=false

# Upstream timeouts (protege contra origem lenta/pendurada)
# OBS: no axios streaming, timeout é por inatividade do socket (não corta stream ativo).
STREAM_UPSTREAM_INACTIVITY_TIMEOUT_MS=20000
STREAM_UPSTREAM_PLAYLIST_TIMEOUT_MS=30000
STREAM_UPSTREAM_MAX_REDIRECTS=5

# Xtream Codes (padrão)
XTREAM_BASE_URL=
XTREAM_USERNAME=
XTREAM_PASSWORD=

# M3U Playlist
M3U_URL=

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=http://localhost:8080,http://localhost:3001

# Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Email (futuro)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@univisionbrasil.com
